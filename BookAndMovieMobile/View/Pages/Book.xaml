<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:book="clr-namespace:BookAndMovieMobile.ViewModel.Book"
             x:Class="BookAndMovieMobile.View.Pages.Book">

    <ContentPage.BindingContext>
        <book:BookViewModel/>
    </ContentPage.BindingContext>


   



    <StackLayout>
        <Button Text="Wishlist" BackgroundColor="Beige"/>
        <Button Text="Watchedlist" BackgroundColor="Beige"/>
        <Button Text="Favouritelist" BackgroundColor="Beige"/>
        <Button Text="Search" BackgroundColor="Beige" Command="{Binding BookSearchCommand}" />
    </StackLayout>

</ContentPage>