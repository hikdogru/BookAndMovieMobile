<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookAndMovieMobile.View.Pages.MovieDetail">

    
    
    
    <ContentPage.Content>
        
        <ScrollView>
            
            <StackLayout>
                <Label  Text="Movie Detail Page" FontSize="Medium" HorizontalOptions="Center"></Label>
                <Image x:Name="movieImage"  HorizontalOptions="Center" Margin="10"></Image>
                <Label  x:Name="movieOriginalTitle" FontSize="Medium" HorizontalOptions="Center"></Label>
                <Label  x:Name="movieReleaseDate"  FontSize="Medium" HorizontalOptions="Center"></Label>
                <Label  x:Name="moviePopularity"  FontSize="Medium" HorizontalOptions="Center"></Label>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Image Source="star.png" />
                    <Label  x:Name="movieVoteAverage"  FontSize="Medium" HorizontalOptions="Center"></Label>
                </StackLayout>
                <Editor  x:Name="movieOverview"  FontSize="Medium" HorizontalOptions="Center" Margin="10 , 5" HeightRequest="1000"/>

            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>